<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/appborder"
        android:padding="24dp"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/ivHeaderIcon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/nothing"
            android:src="@drawable/ldlogowhite" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans"
            android:text="@string/learning_droid"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceDisplaySmall"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" />

        <EditText
            android:id="@+id/etInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:hint="@string/NumberHint"
            android:autofillHints="@string/nothing"
            android:background="@drawable/bg_textfield_pill"
            android:fontFamily="@font/notosans"
            android:inputType="text"
            android:minHeight="56dp"
            android:paddingHorizontal="24dp"
            android:textColor="@color/white"
            android:textColorHint="?attr/colorOutline" />

        <Button
            android:id="@+id/btnMoveActivity"
            style="@style/Widget.LearningDroid.MenuButton"
            android:text="@string/move_activity" />

        <Button
            android:id="@+id/btnMoveWithData"
            style="@style/Widget.LearningDroid.MenuButton"
            android:text="@string/move_with_data" />

        <Button
            android:id="@+id/btnMoveWithObject"
            style="@style/Widget.LearningDroid.MenuButton"
            android:text="@string/move_with_object" />

        <Button
            android:id="@+id/btnMoveParcelize"
            style="@style/Widget.LearningDroid.MenuButton"
            android:text="@string/kotlinParcelizeTXT" />

        <Button
            android:id="@+id/btnDialNumber"
            style="@style/Widget.LearningDroid.MenuButton"
            android:text="@string/dial_number" />

        <Button
            android:id="@+id/btnMoveResult"
            style="@style/Widget.LearningDroid.MenuButton"
            android:text="@string/move_with_result" />

        <Button
            android:id="@+id/btnToScrollActivity"
            style="@style/Widget.LearningDroid.MenuButton"
            android:layout_marginBottom="32dp"
            android:text="@string/move_to_shop" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/result_from_activity"
            android:fontFamily="@font/notosans"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorTertiary"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>